@using System.Threading.Tasks
@using NekoApplicationWeb.ViewModels
@model NekoApplicationWeb.ViewModels.LoanViewModel


<form class="form-horizontal" action="" method="post">
    <fieldset>
        <legend>Lán</legend>
        <div asp-validation-summary="ValidationSummary.ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="@Model.BuyingPrice" class="col-lg-4 control-label"></label>
            <div class="col-lg-8">
                <input asp-for="@Model.BuyingPrice" class="form-control currencyInput"/>
                <span asp-validation-for="@Model.BuyingPrice" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="@Model.PropertyNumber" class="col-lg-4 control-label"></label>
            <div class="col-lg-8">
                <input asp-for="@Model.PropertyNumber" class="form-control"/>
                <span asp-validation-for="@Model.PropertyNumber" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="@Model.NekoLoanAmount" class="col-lg-4 control-label"></label>
            <div class="col-lg-8">
                <input asp-for="@Model.NekoLoanAmount" class="form-control currencyInput" />
                <span asp-validation-for="@Model.NekoLoanAmount" class="text-danger"></span>
            </div>
        </div>

        <legend>Bankalán</legend>
        @foreach (var otherLoan in Model.BankLoans)
        {
            <div class="form-group">
                <label asp-for="@otherLoan.Principal" class="col-lg-4 control-label"></label>
                <div class="col-lg-8">
                    <input asp-for="@otherLoan.Principal" class="form-control currencyInput" />
                    <span asp-validation-for="@otherLoan.Principal" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="@otherLoan.MonthlyPayment" class="col-lg-4 control-label"></label>
                <div class="col-lg-8">
                    <input asp-for="@otherLoan.MonthlyPayment" class="form-control currencyInput" />
                    <span asp-validation-for="@otherLoan.MonthlyPayment" class="text-danger"></span>
                </div>
            </div>
        }
        <div class="col-lg-8 col-lg-offset-4">
            <button class="btn btn-sm btn-success" style="margin-bottom: 20px;" onclick="alert('Vantar');"><i class="fa fa-plus"></i> Bæta við láni</button>
        </div>

        <div class="col-lg-12">
            <button type="submit" class="btn btn-info pull-left" formaction="@Url.Action("LoanBackwards", "Home")"><i class="fa fa-arrow-left" aria-hidden="true"></i> Til baka</button>
            <button type="submit" class="btn btn-info pull-right" formaction="@Url.Action("LoanForward", "Home")">Áfram <i class="fa fa-arrow-right" aria-hidden="true"></i></button>
        </div>
    </fieldset>
</form>
