@using System.Threading.Tasks
@using NekoApplicationWeb.ViewModels
@using NekoApplicationWeb.ViewModels.Page
@model NekoApplicationWeb.ViewModels.Page.FinancesViewModel


<form class="form-horizontal" action="" method="post">
    <fieldset>
        <legend>Tekjur</legend>
        <div asp-validation-summary="ValidationSummary.ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="@Model.MonthlyPayPreTax" class="col-lg-4 control-label"></label>
            <div class="col-lg-8">
                <input asp-for="@Model.MonthlyPayPreTax" class="form-control currencyInput" />
                <span asp-validation-for="@Model.MonthlyPayPreTax" class="text-danger"></span>
            </div>
        </div>

        <legend>Tekjur maka</legend>
        <div class="form-group">
            <label asp-for="@Model.MonthlyPayPreTaxSpouse" class="col-lg-4 control-label"></label>
            <div class="col-lg-8">
                <input asp-for="@Model.MonthlyPayPreTaxSpouse" class="form-control currencyInput"/>
                <span asp-validation-for="@Model.MonthlyPayPreTaxSpouse" class="text-danger"></span>
            </div>
        </div>

        <legend>Aðrar skuldir</legend>
        @foreach (var otherLoan in Model.OtherLoans)
        {
            <div class="form-group">
                <label asp-for="@otherLoan.Remains" class="col-lg-4 control-label"></label>
                <div class="col-lg-8">
                    <input asp-for="@otherLoan.Remains" class="form-control currencyInput"/>
                    <span asp-validation-for="@otherLoan.Remains" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="@otherLoan.MonthlyPayment" class="col-lg-4 control-label"></label>
                <div class="col-lg-8">
                    <input asp-for="@otherLoan.MonthlyPayment" class="form-control currencyInput" />
                    <span asp-validation-for="@otherLoan.MonthlyPayment" class="text-danger"></span>
                </div>
            </div>
        }
        <div class="col-lg-8 col-lg-offset-4">
            <button class="btn btn-sm btn-success" style="margin-bottom: 20px;" onclick="alert('Vantar');"><i class="fa fa-plus"></i> Bæta við láni</button>
        </div>

        <div class="col-lg-12">
            <button type="submit" class="btn btn-info pull-left" formaction="@Url.Action("FinancesBackwards", "Page")"><i class="fa fa-arrow-left" aria-hidden="true"></i> Til baka</button>
            <button type="submit" class="btn btn-info pull-right" formaction="@Url.Action("FinancesForward", "Page")">Áfram <i class="fa fa-arrow-right" aria-hidden="true"></i></button>
        </div>
    </fieldset>
</form>
