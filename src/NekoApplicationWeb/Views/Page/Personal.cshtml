
@using System.Threading.Tasks
@using NekoApplicationWeb.ViewModels.Page.Personal
@using Newtonsoft.Json
@model List<ApplicantViewModel>


<div class="row" ng-app="app-neko" ng-controller="personalPageController as vm" ng-init="vm.initData(@JsonConvert.SerializeObject(@Model))">
    <form class="form-horizontal" action="" method="post">
        <fieldset ng-repeat="applicant in vm.applicants">
            <div class="col-lg-11">
                <legend ng-bind="applicant.Legend"></legend>
            </div>
            <span ng-show="!$first" class="col-lg-1"><a href="#" ng-click="vm.removeApplicant(applicant)"><i class="fa fa-times" style="color: red;"></i></a></span>
            <div asp-validation-summary="ValidationSummary.ModelOnly" class="text-danger"></div>

            <div>
                <div class="form-group" ng-if="$first">
                    <label class="col-lg-4 control-label">Kennitala</label>
                    <div class="col-lg-8">
                        <input class="form-control" ng-model="applicant.Ssn" disabled/>
                    </div>
                </div>
                <div class="form-group required" ng-if="!$first">
                    <label class="col-lg-4 control-label">Kennitala</label>
                    <div class="col-lg-8">
                        <input class="form-control" ng-model="applicant.Ssn"/>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <label class="col-lg-4 control-label">Netfang</label>
                <div class="col-lg-8">
                    <input class="form-control" ng-model="applicant.Name" disabled/>
                </div>
            </div>
            <div>
                <div class="form-group" ng-if="$first">
                    <label class="col-lg-4 control-label">Netfang</label>
                    <div class="col-lg-8">
                        <input class="form-control" ng-model="applicant.Email" disabled/>
                    </div>
                </div>
                <div class="form-group required" ng-if="!$first">
                    <label class="col-lg-4 control-label">Netfang</label>
                    <div class="col-lg-8">
                        <input class="form-control" ng-model="applicant.Email"/>
                    </div>
                </div>
            </div>

            <div class="form-group">
                <label class="col-lg-4 control-label">Facebook slóð</label>
                <div class="col-lg-8">
                    <input class="form-control" ng-model="applicant.FacebookPath"/>
                </div>
            </div>
        </fieldset>
        <div class="col-lg-offset-4 col-lg-8">
            <div class="btn btn-success" ng-click="vm.addApplicant()">
                <i class="fa fa-plus"></i> Bæta við umsækjanda
            </div>
        </div>
    </form>
    <div class="col-lg-12">
        <div class="btn btn-info pull-right" ng-click="vm.continue()">
            Vista og áfram <i class="fa fa-arrow-right" aria-hidden="true"></i>
        </div>
    </div>
</div>

