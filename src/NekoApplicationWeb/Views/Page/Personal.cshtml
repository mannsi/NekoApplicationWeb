
@model NekoApplicationWeb.ViewModels.Page.PersonalViewModel


<div class="row" ng-app="app-neko" ng-controller="personalPageController as vm" ng-init="vm.initData('@Model')">
    <form class="form-horizontal" action="" method="post">
        <fieldset ng-repeat="applicant in vm.applicants">
            <div class="col-lg-12">
                <legend>{{applicant.Legend}}</legend>
            </div>
            <div asp-validation-summary="ValidationSummary.ModelOnly" class="text-danger"></div>
            <div class="form-group required">
                <label asp-for="Ssn" class="col-lg-4 control-label"></label>
                <div class="col-lg-8">
                    <input class="form-control" ng-model="applicant.Ssn"/>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="Name" class="col-lg-4 control-label"></label>
                <div class="col-lg-8">
                    <input class="form-control" ng-model="applicant.Name"/>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="Email" class="col-lg-4 control-label"></label>
                <div class="col-lg-8">
                    <input class="form-control" ng-model="applicant.Email"/>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="FacebookPath" class="col-lg-4 control-label"></label>
                <div class="col-lg-8">
                    <input class="form-control" ng-model="applicant.FacebookPath"/>
                </div>
            </div>
            <div class="col-lg-offset-4 col-lg-8">
                <div class="btn btn-success">
                    <i class="fa fa-plus"></i> Bæta við umsækjanda
                </div>
            </div>
            <div class="col-lg-12">
                <button type="submit" class="btn btn-info pull-left" formaction="@Url.Action("PersonalBackwards", "Page")"><i class="fa fa-arrow-left" aria-hidden="true"></i> Til baka</button>
                <button type="submit" class="btn btn-info pull-right" formaction="@Url.Action("PersonalForward", "Page")">Áfram <i class="fa fa-arrow-right" aria-hidden="true"></i></button>
            </div>
        </fieldset>
    </form>
</div>

