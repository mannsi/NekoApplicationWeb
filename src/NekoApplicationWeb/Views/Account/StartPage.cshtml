@model NekoApplicationWeb.ViewModels.StartPageViewModel

<div class="row">
    <div class="col-md-6">
        <h1>Ný umsókn</h1>
        <p>Stofnaðu <a asp-controller="Account" asp-action="CreateApplication">nýja lánsumsókn</a> um Neko fasteignalán</p>
    </div>
    <div class="col-md-6">
        <div class="panel panel-info">
            <div class="panel-heading">
                <div class="panel-title">Innskráning</div>
            </div>
            <div class="panel-body">
                <form asp-controller="Account" asp-action="Login" method="post" class="form-horizontal" role="form">
                    <fieldset>
                        <div asp-validation-summary="ValidationSummary.ModelOnly" class="text-danger"></div>
                        <div style="margin-bottom: 15px" class="input-group col-md-10 col-md-offset-2">
                            <span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
                            <input asp-for="@Model.Ssn" class="form-control" placeholder="Kennitala" />
                        </div>
                        <div style="margin-bottom: 25px" class="input-group col-md-10 col-md-offset-2">
                            <span class="input-group-addon"><i class="glyphicon glyphicon-lock"></i></span>
                            <input asp-for="@Model.Password" class="form-control" placeholder="Lykilorð" />
                        </div>
                        <div class="col-md-10 col-md-offset-2">
                            <button type="submit" class="btn btn-success">Innskrá</button>
                            <div><a asp-controller="Account" asp-action="ForgotPassword">Gleymt lykilorð ?</a></div>
                        </div>
                    </fieldset>
                </form>
            </div>
        </div>
    </div>
</div>